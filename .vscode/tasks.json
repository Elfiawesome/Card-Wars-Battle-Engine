{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build Standalone", // This label matches the preLaunchTask in launch.json
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Standalone/Standalone.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary",
				"/p:Configuration=Debug",
				"/p:Platform=\"AnyCPU\""
			],
			"problemMatcher": "$msCompile"
		}
	]
}